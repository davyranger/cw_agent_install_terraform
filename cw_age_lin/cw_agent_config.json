{
    "agent": {
        "metrics_collection_interval": 60
    },
    "metrics": {
        "namespace": "CWAgent",
        "append_dimensions": {
            "InstanceId": "${aws:InstanceId}"
        },
        "metrics_collected": {
            "mem": {
                "measurement": [
                    "used_percent"
                ]
            },
            "cpu": {
                "measurement": [
                    "usage_active"
                ]
            },
            "disk": {
                "measurement": [
                    "used_percent"
                ]
            },
            "diskio": {
                "measurement": [
                    "read_bytes",
                    "write_bytes"
                ]
            },
            "processes": {
                "measurement": [
                    "running"
                ]
            }
        }
    }
}
