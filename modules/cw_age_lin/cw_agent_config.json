{
    "agent": {
        "metrics_collection_interval": 60
    },
    "metrics": {
        "namespace": "CWAgent",
        "append_dimensions": {
            "InstanceId": "${aws:InstanceId}"
        },
        "metrics_collected": {
            "mem": {
                "measurement": [
                    "used_percent"
                ]
            },
            "cpu": {
                "measurement": [
                    "usage_active"
                ]
            },
            "disk": {
                "measurement": [
                    "used_percent"
                ]
            },
            "diskio": {
                "measurement": [
                    "read_bytes",
                    "write_bytes"
                ]
            },
            "processes": {
                "measurement": [
                    "running"
                ]
            }
        }
    },
    "logs": {
        "logs_collected": {
            "files": {
                "collect_list": [
                    {
                        "file_path": "/var/log/cloud-init.log",
                        "log_group_name": "/aws/ssm/AWS-RunShellScript",
                        "log_stream_name": "{instance_id}/messages",
                        "retention_in_days": 14
                    }
                ]
            }
        },
        "log_stream_name": "default-log-stream",
        "force_flush_interval": 15
    }
}
